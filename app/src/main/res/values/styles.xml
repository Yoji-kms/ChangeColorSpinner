<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/DefButtonStyle</item>
    </style>

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="android:backgroundTint">@color/colorBackgroundGreen</item>
        <item name="android:colorButtonNormal">@color/colorButtonNormalGreen</item>
        <item name="buttonStyle">@style/GreenButtonStyle</item>
        <item name="android:textColor">@color/colorTextGreen</item>
    </style>

    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:backgroundTint">@color/colorBackgroundBlue</item>
        <item name="buttonStyle">@style/BlueButtonStyle</item>
        <item name="android:textColor">@color/colorTextBlue</item>
    </style>

    <style name="BlackTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
        <item name="android:backgroundTint">@color/colorBackgroundBlack</item>
        <item name="buttonStyle">@style/BlackButtonStyle</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="DefButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:backgroundTint">@color/colorButtonNormalDef</item>
        <item name="android:textColor">@color/colorBtnTextDef</item>
    </style>

    <style name="GreenButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:backgroundTint">@color/colorButtonNormalGreen</item>
        <item name="android:textColor">@color/colorBtnTextGreen</item>
    </style>

    <style name="BlueButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:backgroundTint">@color/colorButtonNormalBlue</item>
        <item name="android:textColor">@color/colorBtnTextBlue</item>
    </style>

    <style name="BlackButtonStyle" parent="android:Widget.Material.Light.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:backgroundTint">@color/colorButtonNormalBlack</item>
        <item name="android:textColor">@color/colorBtnTextBlack</item>
    </style>
</resources>